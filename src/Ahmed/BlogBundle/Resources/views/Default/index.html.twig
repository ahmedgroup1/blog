{% extends 'AhmedBlogBundle::layout.html.twig' %}

{% block content -%}


    <div class="col-sm-8">
        <h3>Posts</h3>
        <div class="list-group">
            {% for postEntity in postEntities %}
                <a href="{{ path('post_show', { 'id': postEntity.id }) }}" class="list-group-item">
                    <h4 class="list-group-item-heading">{{ postEntity.title }}</h4>
                    <p class="list-group-item-text">on {% if postEntity.dateCreated %}{{ postEntity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</p>
                </a>
            {% endfor %}
        </div>
    </div>      




{% endblock %}

