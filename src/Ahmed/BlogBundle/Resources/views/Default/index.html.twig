{% extends 'AhmedBlogBundle::layout.html.twig' %}

{% block body -%}
    <h1>Posts</h1>
    <ul>
        {% for postEntity in postEntities %}
            <li>
                <a href="{{ path('post_show', { 'id': postEntity.id }) }}">{{ postEntity.title }}</a> by {{ postEntity.author }} on {% if postEntity.dateCreated %}{{ postEntity.dateCreated|date('Y-m-d H:i:s') }}{% endif %} [<a href="{{ path('post_edit', { 'id': postEntity.id }) }}">edit</a>]
            </li>        
        {% endfor %}
    </ul>
{% endblock %}

